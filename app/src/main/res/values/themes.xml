<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/card_bg_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:colorBackground">@color/white</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <style name="AppButton">
        <item name="fontFamily">@font/inter_regular</item>
        <!-- <item name="backgroundColor">@color/black</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>


    <style name="TextViewNoteDate">
        <item name="fontFamily">@font/roboto_medium</item>
        <!-- <item name="backgroundColor">@color/black</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/note_date</item>
        <item name="android:textSize">12sp</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewNoteTitle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="TextViewNoteBody">
        <item name="fontFamily">@font/open_sans</item>
        <!-- <item name="backgroundColor">@color/black</item>-->
        <!-- <item name="android:textStyle">bold</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="TextViewAppBody">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewNoteTitleEdit">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewAppBodyEdit" parent="TextViewAppBody">
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="TextViewNoteDateEdit">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

</resources>